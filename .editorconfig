# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{coffee,cjsx,cson,feature,hbs,js,jsx,json,less,mustache,php,sh,ts,tsx,xml,yml,yaml}]
indent_style = tab
indent_size = 2
tab_width = 2
